<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_principal"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="net.londatiga.android.bluetooth.activity_comunicacion"
android:theme="@style/AppTheme">

    <EditText
        android:id="@+id/editTextMensaje"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textEscribirMsg"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="177dp"
        android:layout_marginBottom="15dp"
        android:ems="10"
        android:freezesText="false"
        android:gravity="center_horizontal"
        android:text="Mensaje"
        android:textSize="30sp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textEscribirMsg"
        android:layout_width="395dp"
        android:layout_height="53dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_horizontal"
        android:text="Escriba Mensaje"
        android:textColor="#3F51B5"
        android:textSize="30sp" />

    <Button
        android:id="@+id/btnEnviar"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="315dp"
        android:background="#4D00BCD4"
        android:ems="5"
        android:enabled="false"
        android:text="Enviar"
        tools:ignore="HardcodedText" />

</RelativeLayout>
